@model DailyOrderVM
    <section>
        <div class=" my-2">
            <div class="row bg-white radius mx-2 py-3">
                <div class="col-lg-12 d-flex justify-content-center align-items-center">
                    <form  asp-action="SearchDate" method="get">
                        <div class="row m-0">
                            <div class="col-lg-12 p-0">
                                <h3 class="text-gradient2"><label>Today's profits</label></h3>
                                <div class="row m-0">
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <input type="text" value="@ViewBag.total" class="form-control search-slt" disabled>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <input type="date" asp-for="Serchdate" class="form-control search-slt">
                                    </div>

                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <select class="form-control search-slt" asp-for="BranchId" asp-items="@(new SelectList(Model.Branches,"Id","Name"))">
                                            <option disabled selected>Select Branch</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                        <button type="submit" class="btn btn-dark wrn-btn text-gradient2 d-flex justify-content-center align-items-center">Search</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
<section id="user-table">
    <div class="container pb-5">
        <table class="table text-center">
            <thead class="text-white">
                <tr>
                    <th>ORDER NUMBER</th>
                    <th>ORDER TYPE</th>
                    <th>ORDER DATE</th>
                    <th>Net</th>
                    <th>Service</th>
                    <th>Tax</th>
                    <th>Discount</th>
                    <th>TOTAL</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody class="text-muted">
               
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td data-label="Order Number">@item.Id</td>
                        <td data-label="Order Type">@item.Type</td>
                        <td data-label="Order date">@item.OrderDate</td>
                        <td data-label="Order Net">@item.Net</td>
                        <td data-label="Order Service">@item.Service</td>
                        <td data-label="Order Tax">@item.Tax</td>
                        <td data-label="Order Discount">@item.Discount</td>
                        <td data-label="Order Total">@item.Total</td>
                        <td data-label="Details"><a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle pointer"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>