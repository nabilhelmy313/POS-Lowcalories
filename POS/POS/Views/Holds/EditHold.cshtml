@model List<POS.Data.Order>
<section>
    <div class="container my-4">
        <div class="row bg-white radius mx-2 py-3">
            <div class="col-lg-8 d-flex justify-content-center align-items-center">
                <!-- search input -->
                <div class="search-btn w-100 text-center">
                    <button class="btn bg-gradient text-white radius m-2 search" style="padding: 12px; vertical-align:0;">search customer</button>
                    <input id="search" type="text" class="form-control border-gradient d-inline-block w-50 radius py-4" placeholder="customer number">


                </div>
            </div>

            <div class="col-lg-4 py-2 d-flex justify-content-center align-items-center ">
                <!-- username img -->
                <div class="text-center border-gradient radius d-flex justify-content-center align-items-center">
                    <img src="assets/user.png" alt="user" class="img-fluid radius">
                    <h6 class="text-gradient mx-3">User Name</h6>
                </div>
            </div>

        </div>
    </div>
    <div class="noti">

    </div>
</section>

<section id="userTable2">
    <div class="container pb-5">
        <table class="table text-center">
            <!-- table head -->
            <thead class="text-white">
                <tr>
                    <th>Order Number</th>
                    <th>Order Type</th>
                    <th>Customer Phone</th>
                    <th>Status</th>
                    <th>Cooking Time</th>
                    <th>Delivery Time</th>
                    <th>Details</th>
                    <th>Approval</th>
                </tr>
            </thead>
            <tbody id="orders   " class="text-muted">
                <!-- first row -->
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var d = Model[i].CookingTime;
                    <tr>

                        <td data-label="Order Number" class="pt-3">@(Model[i].Id)</td>
                        <td data-label="Order Type" class="pt-3">@(Model[i].Type)</td>
                        <td data-label="Customer phone">
                            @Model[i].CustPhone
                        </td>
                        <td data-label="Status" class="pt-3">
                            @if (Model[i].Status == 0)
                            {
                                <div>HOOLDING</div>
                            }
                            @if (Model[i].Status == 1)
                            {
                                <div>PRAPERATION</div>

                            }
                        </td>

                        <!-- able to edit this data cell -->
                        <td data-label="Cooking Time" class="pt-3 editRow">
                            @if (d.ToString() == "1/1/0001 12:00:00 AM")
                            {
                                <div>----</div>
                            }
                            @if (d.ToString() != "1/1/0001 12:00:00 AM")
                            {
                                <div>@d</div>
                            }
                        </td>

                        <!-- able to edit this data cell -->
                        <td data-label="Delivery Time" class="pt-3 editRow">
                            @if (Model[i].DiliveryTime.ToString() == "1/1/0001 12:00:00 AM")
                            {
                                <div>----</div>
                            }
                            @if (Model[i].DiliveryTime.ToString() != "1/1/0001 12:00:00 AM")
                            {
                                <div>@Model[i].DiliveryTime</div>
                            }
                        </td>
                        <td data-label="Details"><a asp-action="Details" asp-controller="DailyOrder" asp-route-id="@Model[i].Id"><i class="fas fa-info-circle pointer"></i></a></td>

                        <!-- Approve button  -->
                        <td data-label="Approve">
                            <a asp-action="MakeTime" asp-route-id="@(Model[i].Id)" class="btn radius text-white bg-gradient approveOrder">Approve</a>
                        </td>
                    </tr>

                }









            </tbody>
        </table>
    </div>
</section>
