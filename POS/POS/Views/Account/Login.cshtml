@model LoginVM
@{
    Layout = "_LoginLayout";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/layout/assets/img-01.png" alt="IMG">
            </div>

            <form asp-action="Login" class="login100-form validate-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <span class="login100-form-title text-gradient">
                    Member Login
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" asp-for="UserName" placeholder="User Name">
                    <span class="focus-input100" asp-validation-for="UserName"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" asp-for="Password" placeholder="Password">
                    <span class="focus-input100" asp-validation-for="Password"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn bg-gradient">
                        Login
                    </button>
                </div>

                <div class="text-center p-t-136">
                    <a class="txt2" asp-controller="Account" asp-action="Register">
                        Create your Account
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
