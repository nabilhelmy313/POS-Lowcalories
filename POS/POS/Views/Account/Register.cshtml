@model RegisterVM
@{ 
    Layout = "_LoginLayout";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/layout/assets/img-01.png" alt="IMG">
            </div>

            <form asp-action="Register" class="login100-form validate-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <span class="login100-form-title text-gradient">
                    Member Register
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input100" asp-for="UserName" placeholder="User Name">
                    <span class="focus-input100" asp-validation-for="UserName"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" asp-for="Password" placeholder="Password">
                    <span class="focus-input100" asp-validation-for="Password"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <select class="input100" asp-for="Branch" asp-items="@(new SelectList(Model.Branches,"Name","Name"))">
                        <option value="No Branch"> No Branch</option>
                    </select>
                    <span class="focus-input100" asp-validation-for="Password"></span>
                    <span class="symbol-input100">
                        <i class="fas fa-home-alt"></i>
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    @foreach (var i in Model.Roles)
                    {
                        <div class="bg-white p-1 radius d-inline-block my-1" style="width: fit-content;">
                            <input asp-for="RoleId" type="radio" value="@i.Name"  class="required" checked>
                            <label class="m-0 text-gradient">@i.Name</label>
                        </div>
                    }
                </div>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn bg-gradient">
                        Register
                    </button>
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        Forgot
                    </span>
                    <a class="txt2" href="#">
                        Username / Password?
                    </a>
                </div>

                <div class="text-center p-t-136">
                    <a class="txt2" href="#">
                        Create your Account
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>