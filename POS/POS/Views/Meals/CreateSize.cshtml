@model POS.ViewModel.AddMealViewModel
<section id="createMeal">
    <form class="container py-3" enctype="multipart/form-data" asp-controller="meals" asp-action="CreateSize">
        <h2 class="text-gradient h1 py-1">Create Meal</h2>
        <hr>
        <div class="row mx-2">

            <div class="col-12 position-relative">
                <label class="text-gradient font-weight-bold">Meal</label>
                @*<select asp-for="MealId" class="form-control .nice-select w-100 text-gradient2" asp-items="@(new SelectList(Model.Meals,"Id","Name"))"></select>
                <span asp-validation-for="MealId" class="text-danger"></span>*@
                <select asp-for="MealId" class="form-control .nice-select w-100 text-gradient2" asp-items="@(new SelectList(Model.Meals,"Id","Name"))"></select>
                <span asp-validation-for="MealId" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label class="text-gradient font-weight-bold">Meal Size</label>
                <input asp-for="Name" type="text" class="form-control">
            </div>
            <div class="col-12">
                <label class="text-gradient font-weight-bold">Price</label>
                <input asp-for="Price" class="form-control">
            </div>

            <div class="col-12">
                <label class="text-gradient font-weight-bold">Note</label>
                <input asp-for="Note" type="text" class="form-control">
            </div>
            <button class="btn btn-block bg-gradient text-white mt-3">Create</button>
        </div>
    </form>
</section>
<form class="form-group" asp-action="CreateSize">
    <label class="col-form-label"> Meal</label>
    <div class="form-group row">
        <label asp-for="Meals" class="col-sm-2 col-form-label"></label>
            <select asp-for="MealId" class="form-control" asp-items="@(new SelectList(Model.Meals,"Id","Name"))"></select>
            <span asp-validation-for="MealId" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control" placeholder="Quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Note" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Note" class="form-control" placeholder="Note">
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MealImage" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="MealImage" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-2 col-form-label"></div>

        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-info btn-block">Create</button>
        </div>
    </div>

    @*This script is required to display the selected file in the file upload element*@

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>